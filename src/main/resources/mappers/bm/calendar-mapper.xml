<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="calendar">

	<resultMap id="calMap" type="calendar">
		<id property="calendarKey" column="CALENDAR_KEY"/>
		<result property="_id" column="MEMBER_KEY"/>
		<result property="title" column="TITLE"/>
		<result property="start" column="START_DATE"/>
		<result property="end" column="END_DATE"/>
		<result property="description" column="DESCRIPTION"/>
		<result property="type" column="TYPE"/>
		<result property="backgroundColor" column="BACKGROUND_COLOR"/>
		<result property="textColor" column="TEXT_COLOR"/>
		<result property="allDay" column="ALLDAY"/>
	</resultMap>


	<insert id="insertCalendar" parameterType="calendar">
		INSERT INTO CALENDAR VALUES(SEQ_CALENDAR.NEXTVAL,1,#{title},TO_TIMESTAMP(#{start},'YYYY-MM-DD'),TO_TIMESTAMP(#{end},'YYYY-MM-DD'),#{description},#{type},#{backgroundColor},#{textColor},'Y')
	</insert>
	
	<insert id="insertCalendar2" parameterType="calendar">
		INSERT INTO CALENDAR VALUES(SEQ_CALENDAR.NEXTVAL,1,#{title},TO_TIMESTAMP(#{start},'YYYY-MM-DD HH24:MI'),TO_TIMESTAMP(#{end},'YYYY-MM-DD HH24:MI'),#{description},#{type},#{backgroundColor},#{textColor},'N')
	</insert>
	
	<select id="selectAllByKey" parameterType="_int" resultMap="calMap">
		SELECT * FROM CALENDAR WHERE member_Key= #{memberKey}
	</select>




</mapper>